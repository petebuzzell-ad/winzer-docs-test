{% comment %}
    Renders a menu list of navigation items.

    Accepts:
    - menu: {Object} Link List object, main menu
    - (Optional) secondary_menu: {Object} Link List object, displays on mobile only below main menu
    - (Optional) menu_blocks: {Object} Blocks defined for mega menu contents,
    - (Optional) icons: {Object} Block defined for utility menu icons

    Usage:
    {% render 'menu-header-drawer', menu: link_list, blocks: blocks, secondary_menu: link_list, icons: block %}
{% endcomment %}

{% comment %} used ot show/hide content only visible to OneSource site, or on other sites to logged in users {% endcomment %}
{% assign onesource_store_name_string = 'onesource' %}
{% assign corp_store_name_string = 'winzer' %}
{% assign fastserv_store_name_string = 'fastserv' %}
{% assign storename = shop.name | downcase %}

<div id="menu-drawer" class="menu-drawer motion-reduce" tabindex="-1">
  <div class="menu-drawer__inner-container">
    <div class="menu-drawer__navigation-container">
      <nav class="menu-drawer__navigation">
        <ul class="menu-drawer__menu list-menu" role="list">        
          {%- for link in menu.links -%}
            {%- if link.links != blank -%}
              {%- for childlink in link.links -%}
                {%- if childlink.links != blank -%}
                  <li>
                    <details id="Details-menu-drawer-menu-item-{{ forloop.index }}">
                      <summary class="menu-drawer__menu-item list-menu__item link link--text focus-inset{% if childlink.child_active %} menu-drawer__menu-item--active{% endif %}">
                        {{ childlink.title | escape }}
                          {% render 'icon-caret' %}
                      </summary>
                      <div id="link-{{ childlink.title | escape }}" class="menu-drawer__submenu motion-reduce" tabindex="-1" {% if childlink.links[1].title contains "no-header" %} style="padding-bottom: 25rem;"{% endif %}>
                        <div class="menu-drawer__inner-submenu">
                          <button class="menu-drawer__close-button link link--text focus-inset" aria-expanded="true">
                            {% render 'icon-caret' %}
                            {{ childlink.title | escape }}
                          </button>
                          <div class="menu-drawer__inner-submenu-scroll">
                            <ul class="menu-drawer__menu list-menu menu-list-link-lists" role="list" tabindex="-1">
                                <li {% if childlink.title contains "no-header" %}class="no-border--oftype"{% endif %}>
                                  <ul class="menu-drawer__menu list-menu grandchild-links" role="list" tabindex="-1">
                                    <li>
                                      <a href="{{ childlink.url }}" class="menu-drawer__menu-item parent-item list-menu__item link link--text focus-inset {% if childlink.current %} list-menu__item--active{% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
                                        {{ 'sections.header.menu_list_shop_all' | t }} {{ childlink.title | escape }}
                                          {% render 'icon-caret' %}
                                      </a>
                                    </li>
                                    {%- for grandchildlink in childlink.links -%}
                                      {% if grandchildlink.title contains "::" %}
                                        {% assign grandchildlink_split = grandchildlink.title | escape | split: "::" %}
                                        <li class="mega-menu__image-option--mobile">
                                          <a href="{{ grandchildlink.url }}" class="menu-drawer__menu-item menu_list_shop_all list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                                            {% comment %}theme-check-disable{% endcomment %}
                                            <img src="{{ grandchildlink_split[1] }}" class="menu-drawer__menu-item--grandchild__image" loading="lazy" />
                                            {% comment %}theme-check-enable{% endcomment %}
                                            <span class="menu-drawer__menu-item--grandchild__name">{{ grandchildlink_split[0] }}</span>
                                          </a>
                                        </li>
                                      {% else %}
                                        <li class="mega-menu__image-option--mobile">
                                          <a href="{{ grandchildlink.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %} {% if grandchildlink.title contains 'all ' or grandchildlink.title contains 'All ' %} header__menu-item--all{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                                            {{ grandchildlink.title | escape }}
                                          </a>
                                        </li>
                                      {% endif %}
                                    {%- endfor -%}
                                  </ul>
                                </li>
                            </ul>
  
                            {% render 'menu-list-promos', menu_item: link, blocks: blocks %}
                          </div>
                        </div>
                      </div>
                    </details>
                  </li>
                {%- else -%}
                  <li>
                    <a class="menu-drawer__menu-item list-menu__item no-child" href="{{ childlink.url }}">{{ childlink.title | escape }}</a>
                  </li>
                {%- endif -%}
              {%- endfor -%}
            {%- else -%}
            <li>
              {%- if link.links != blank -%}

                {%- for block in blocks -%}
                  {%- if link.title != blank and link.title != block.settings.parent_menu_item_name -%}
                    {%- continue -%}
                  {%- endif -%}

                  {%- case block.type -%}
                    {%- when 'megamenu_link_lists' -%}
                    <details id="Details-menu-drawer-menu-item-{{ forloop.index }}">
                      <summary class="menu-drawer__menu-item list-menu__item link link--text focus-inset{% if link.child_active %} menu-drawer__menu-item--active{% endif %}">
                        {{ link.title | escape }}
                        {% render 'icon-caret' %}
                      </summary>
                      <div id="link-{{ link.title | escape }}" class="menu-drawer__submenu motion-reduce" tabindex="-1" {% if link.links[1].title contains "no-header" %} style="padding-bottom: 25rem;"{% endif %}>
                        <div class="menu-drawer__inner-submenu">
                          <button class="menu-drawer__close-button link link--text focus-inset" aria-expanded="true">
                            {% render 'icon-caret' %}
                            {{ link.title | escape }}
                          </button>
                          <div class="menu-drawer__inner-submenu-scroll">
                            <ul class="menu-drawer__menu list-menu menu-list-link-lists" role="list" tabindex="-1">
                              {%- for childlink in link.links -%}
                                <li {% if childlink.title contains "no-header" %}class="no-border--oftype"{% endif %}>
                                  {% unless childlink.title contains "no-header" %}
                                    <a href="{{ childlink.url }}" class="menu-drawer__menu-item list-menu__item-header--mobile link link--text list-menu__item focus-inset{% if childlink.current %} menu-drawer__menu-item--active{% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
                                      {{ childlink.title | escape }}
                                    </a>
                                  {% endunless %}
                                  <ul class="menu-drawer__menu list-menu" role="list" tabindex="-1">
                                    {%- for grandchildlink in childlink.links -%}
                                      {% if grandchildlink.title contains "::" %}
                                        {% assign grandchildlink_split = grandchildlink.title | escape | split: "::" %}
                                        <li class="mega-menu__image-option--mobile">
                                          <a href="{{ grandchildlink.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                                            {% comment %}theme-check-disable{% endcomment %}
                                            <img src="{{ grandchildlink_split[1] }}" class="menu-drawer__menu-item--grandchild__image" loading="lazy" />
                                            {% comment %}theme-check-enable{% endcomment %}
                                            <span class="menu-drawer__menu-item--grandchild__name">{{ grandchildlink_split[0] }}</span>
                                          </a>
                                        </li>
                                      {% else %}
                                        <li class="mega-menu__image-option--mobile">
                                          <a href="{{ grandchildlink.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %} {% if grandchildlink.title contains 'all ' or grandchildlink.title contains 'All ' %} header__menu-item--all{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                                            {{ grandchildlink.title | escape }}
                                          </a>
                                        </li>
                                      {% endif %}
                                    {%- endfor -%}

                                    {%- if block.settings.parent_menu_item_all -%}
                                      <li>
                                        {% if childlink.title contains "no-header" %}
                                          {% if forloop.last %}
                                            <a href="{{ link.url }}" class="menu-drawer__menu-item parent-item list-menu__item link link--text focus-inset"{% if childlink.current %} aria-current="page"{% endif %}>
                                              {{ 'sections.header.menu_list_shop_all' | t }} {{ link.title | escape }}
                                            </a>
                                          {% endif %}
                                        {% else %}
                                          <a href="{{ childlink.url }}" class="menu-drawer__menu-item parent-item list-menu__item link link--text focus-inset {% if childlink.current %} list-menu__item--active{% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
                                            {{ 'sections.header.menu_list_shop_all' | t }} {{ childlink.title | escape }}
                                          </a>
                                        {% endif %}
                                      </li>
                                    {%- endif -%}
                                  </ul>
                                </li>
                              {%- endfor -%}
                            </ul>

                            {% render 'menu-list-promos', menu_item: link, blocks: blocks %}
                          </div>
                        </div>
                      </div>
                    </details>

                    {%- when 'megamenu_image_blocks' -%}
                    <details id="Details-menu-drawer-menu-item-{{ forloop.index }}">
                      <summary class="menu-drawer__menu-item list-menu__item link link--text focus-inset{% if link.child_active %} menu-drawer__menu-item--active{% endif %}">
                        {{ link.title | escape }}
                        {% render 'icon-caret' %}
                      </summary>
                      <div id="link-{{ link.title | escape }}" class="menu-drawer__submenu motion-reduce" tabindex="-1">
                        <div class="menu-drawer__inner-submenu">
                          <button class="menu-drawer__close-button link link--text focus-inset" aria-expanded="true">
                            {% render 'icon-caret' %}
                            {{ link.title | escape }}
                          </button>

                          <ul class="menu-drawer__menu list-menu menu-list-image" role="list" tabindex="-1">
                            {%- for childlink in link.links -%}
                              <li>
                                {% render 'menu-list-image', parent_menu_item: link, menu_item: childlink, blocks: blocks %}
                                {%- if childlink.links == blank -%}
                                  <a href="{{ childlink.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset{% if childlink.current %} menu-drawer__menu-item--active{% endif %}"{% if childlink.current %} aria-current="page"{% endif %}>
                                    {{ childlink.title | escape }}
                                  </a>
                                {%- else -%}
                                  <details id="Details-menu-drawer-submenu-{{ forloop.index }}">
                                    <summary class="menu-drawer__menu-item link link--text list-menu__item focus-inset">
                                      {{ childlink.title | escape }}
                                      {% render 'icon-caret' %}
                                    </summary>
                                    <div id="childlink-{{ childlink.title | escape }}" class="menu-drawer__submenu motion-reduce">
                                      <button class="menu-drawer__close-button link link--text focus-inset" aria-expanded="true">
                                        {% render 'icon-caret' %}
                                        {{ childlink.title | escape }}
                                      </button>
                                      <ul class="menu-drawer__menu list-menu" role="list" tabindex="-1">
                                        {%- for grandchildlink in childlink.links -%}
                                          <li>
                                            <a href="{{ grandchildlink.url }}" class="menu-drawer__menu-item link link--text list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %}"{% if grandchildlink.current %} aria-current="page"{% endif %}>
                                              {{ grandchildlink.title | escape }}
                                            </a>
                                          </li>
                                        {%- endfor -%}
                                      </ul>
                                    </div>
                                  </details>
                                {%- endif -%}
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      </div>
                    </details>
                  {%- endcase -%}
                {%- endfor -%}

              {%- else -%}
                <a href="{{ link.url }}" class="menu-drawer__menu-item list-menu__item link link--text focus-inset{% if link.current %} menu-drawer__menu-item--active{% endif %}"{% if link.current %} aria-current="page"{% endif %}>
                  {{ link.title | escape }}
                </a>
              {%- endif -%}
            </li>
            {%- endif -%}
          {%- endfor -%}
        </ul>
        
        <footer class="menu-drawer__footer">
          <span class="menu-drawer__footer--label">
            Need Help?
            <a class="menu-drawer__footer--phone" href="tel:+{{ settings.contact_call |  remove: '-' |  remove: '(' |  remove: ')' }}">{{ settings.contact_call }}</a>
          </span>
          {% unless secondary_menu == blank %}
            {% capture account_link %}
              {%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}
            {%- endcapture -%}

            {%- for link in secondary_menu.links  -%}
              {%- if link.title != blank -%}

                {% if link.title contains 'Account' %}
                  {% assign url = account_link %}
                {% else %}
                  {% assign url = link.url %}
                {% endif %}

                {% if icons != blank %}
                  {% assign icon_label = 'icon_label_' | append: forloop.index %}
                  {% assign icon_select = 'icon_' | append: forloop.index %}
                  {% assign label = icons.settings[icon_label] %}
                  {% assign icon = icons.settings[icon_select] %}

                  {%- if icon != blank and link.title == label -%}
                    {% render 'menu-link-item', title: link.title, url: url, icon: icon, class: classes %}
                  {%- else -%}
                    {% render 'menu-link-item', title: link.title, url: url, class: classes %}
                  {%- endif -%}
                {% else %}
                  {% render 'menu-link-item', title: link.title, url: url, class: classes %} 
                {% endif %}

              {%- endif -%}
            {%- endfor -%}
          {% endunless %}
        </footer>
      </nav>
    </div>
  </div>
</div>