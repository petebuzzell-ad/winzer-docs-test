{{ 'component-cart.css' | asset_url | stylesheet_tag }}
{{ 'component-totals.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-discounts.css' | asset_url | stylesheet_tag }}
{{ 'component-loading-overlay.css' | asset_url | stylesheet_tag }}

<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>

<cart-items class="page-width{% if cart == empty %} is-empty{% endif %}">
  <div class="title-wrapper-with-link">
    <h1 class="title title--primary">{{ 'sections.cart.title' | t }}</h1>

    {% if section.settings.cart_message != blank %}
      <a {% if section.settings.cart_message_link %}href="{{ section.settings.cart_message_link }}"{% endif %} class="cart-message cart-message__main">{{ section.settings.cart_message }}</a>
    {% endif %}
  </div>

  {% unless section.settings.enable_gift_message == false and section.settings.enable_shipping_message == false %}
    <div class="cart__threshold-messages">

      {% if section.settings.enable_shipping_message %}
        {% render 'shipping-threshold' %}
      {% endif %}

      {% if section.settings.enable_gift_message %}
        {% render 'cart-gift-messaging' %}
      {% endif %}
    </div>
  {% endunless %}

  <div class="cart__warnings">

    <h1 class="cart__empty-text">{{ 'sections.cart.empty' | t }}</h1>
    <a href="{{ routes.all_products_collection_url }}" class="button">
      {{ 'general.continue_shopping' | t }}
    </a>

    {%- if shop.customer_accounts_enabled -%}
      <h2 class="cart__login-title">{{ 'sections.cart.login.title' | t }}</h2>
      <p class="cart__login-paragraph">
        {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
      </p>
    {%- endif -%}
  </div>

  <form action="{{ routes.cart_url }}" class="cart__contents critical-hidden" method="post" id="cart">
    <div class="cart__items" id="main-cart-items" data-id="{{ section.id }}">
      <div class="js-contents">
        {%- if cart != empty -%}
          <table class="cart-items">
            <thead>
              <tr>
                <th class="caption-with-letter-spacing" colspan="2" scope="col">{{ 'sections.cart.headings.product' | t }}</th>
                <th class="medium-hide large-up-hide right caption-with-letter-spacing" colspan="1" scope="col">{{ 'sections.cart.headings.total' | t }}</th>
                <th class="small-hide caption-with-letter-spacing" colspan="1" scope="col">{{ 'sections.cart.headings.price' | t }}</th>
                <th class="cart-items__heading--wide small-hide caption-with-letter-spacing" colspan="1" scope="col">{{ 'sections.cart.headings.quantity' | t }}</th>
                <th class="small-hide right caption-with-letter-spacing" colspan="1" scope="col">{{ 'sections.cart.headings.total' | t }}</th>
              </tr>
            </thead>

            <tbody>
              {%- for item in cart.items -%}
                <tr class="cart-item" id="CartItem-{{ item.index | plus: 1 }}">
                  <td class="cart-item__media">
                    {% if item.image %}
                      {% comment %} Leave empty space due to a:empty CSS display: none rule {% endcomment %}
                      <a href="{{ item.url }}" class="cart-item__link" aria-hidden="true" tabindex="-1"> </a>
                      {% render 'image', image: item.image, image_desired_width: 150, alt: item.image.alt, class: "cart-item__image" %}
                    {% endif %}
                  </td>

                  <td class="cart-item__details">
                    {%- if section.settings.show_vendor -%}
                      <p class="caption-with-letter-spacing light">{{ item.product.vendor }}</p>
                    {%- endif -%}

                    <a href="{{ item.url }}" class="cart-item__name h4 break">{{ item.product.title | escape }}</a>

                    {%- if item.variant and item.variant.sku != blank -%}
                      <div class="product-option">
                        <dt class="cart-item__number h4">{{ item.variant.sku }} </dt>
                      </div>
                    {%- endif -%}

                    {%- if item.product.has_only_default_variant == false or item.properties.size != 0 or item.selling_plan_allocation != nil -%}
                      <dl>
                        {%- if item.product.has_only_default_variant == false -%}
                          {%- for option in item.options_with_values -%}
                            <div class="product-option">
                              <dt>{{ option.name }}: </dt>
                              <dd>{{ option.value }}</dd>
                            </div>
                          {%- endfor -%}
                        {%- endif -%}

                        {%- for property in item.properties -%}
                          {%- assign property_first_char = property.first | slice: 0 -%}
                          {%- if property.last != blank and property_first_char != '_' -%}
                            <div class="product-option">
                              <dt>{{ property.first }}: </dt>
                              <dd>
                                {%- if property.last contains '/uploads/' -%}
                                  <a href="{{ property.last }}" class="link" target="_blank">
                                    {{ property.last | split: '/' | last }}
                                  </a>
                                {%- else -%}
                                  {{ property.last }}
                                {%- endif -%}
                              </dd>
                            </div>
                          {%- endif -%}
                        {%- endfor -%}
                      </dl>

                      <p class="product-option">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                    {%- endif -%}

                    <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                      {%- for discount in item.discounts -%}
                        {% if discount.amount > 0 %}
                          {% unless discount.title contains "4-digit" %}
                          <li class="discounts__discount">
                            {%- render 'icon-discount' -%}
                            {{ discount.title }} {{ discount.amount | money }}
                          </li>
                          {% endunless %}
                        {% endif %}
                      {%- endfor -%}
                    </ul>

                    <div class="cart-item__unit-price-wrapper left medium-hide large-up-hide">
                      {% if item.price != nil %}
                        {% assign currency_symbopl = 0 | money | remove: '0' | remove: '.' | strip_html %}
                        {% assign item_final_price_amount = item.final_price %}

                        {% comment %}{% unless shop.name | downcase contains "onesource" %}{% endcomment %}
                          {% if item.properties['__four_decimal_price'] and item.properties['__four_decimal_price'] != blank %}
                            {% assign item_final_price_amount = item.properties['__four_decimal_price'] | plus: 0 | times: 100 %}
                            {% capture item_final_price %}{{ currency_symbopl }}{{ item_final_price_amount | divided_by: 100.0 }}{% endcapture %}
                            {% assign missing_digits = item_final_price | split: '.' | last | size | minus: 4 | times: -1 %}
                            {% for i in (1..missing_digits) %}
                              {% capture item_final_price %}{{ item_final_price }}0{% endcapture %}
                            {% endfor %}
                          {% else %}
                            {% capture item_final_price %}{{ item_final_price_amount | money }}{% endcapture %}
                          {% endif %}
                        {% comment %}{% endunless %}{% endcomment %}
                      {% endif %}

                      {% comment %} one unit price {% endcomment %}
                      {% if item.price != nil %}
                        <div class="price unit-price-value"><span class="cart-price-title h4 hide-large-up">Price:&nbsp;</span>{{ item_final_price }}</div>
                        {%- if item.original_price != item.final_price -%}
                            <div class="price unit-price-value cart-item__old-price"><s>{{ item.variant.price | money }}</s></div>
                        {% endif %}
                        <div class="unit-price-qty-label"> /
                          {% if item.variant.metafields.cql.package_display != blank %}
                            {{ item.variant.metafields.cql.package_display }}
                          {% else %}
                            {{ 'products.product.price_unit_qty_default' | t }}
                          {% endif %}
                        </div>
                      {% endif %}
                    </div>
                  </td>

                  <td class="cart-item__unit-price left small-hide">
                    <div class="loading-overlay hidden">
                      <div class="loading-overlay__spinner">
                        <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                          <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                        </svg>
                      </div>
                    </div>
                    <div class="cart-item__unit-price-wrapper">
                      {% comment %} one unit price {% endcomment %}
                      {% if item.price != nil %}
                        <span class="price unit-price-value price--end">{{ item_final_price }}</span>
                        {%- if item.original_price != item_final_price_amount -%}
                            <span class="price unit-price-value price--end cart-item__old-price"><s>{{ item.variant.price | money }}</s></span>
                        {% endif %}
                        <span class="unit-price-qty-label">&nbsp;/
                          {% if item.product.metafields.cql.winzer_uom != blank %}
                            {{ item.product.metafields.cql.winzer_uom }}
                          {% else %}
                            {{ 'products.product.price_unit_qty_default' | t }}
                          {% endif %}
                        </span>
                      {% endif %}
                    </div>
                  </td>

                  <td class="cart-item__totals right medium-hide large-up-hide">
                    <div class="loading-overlay hidden">
                      <div class="loading-overlay__spinner">
                        <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                          <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                        </svg>
                      </div>
                    </div>
                    <div class="cart-item__price-wrapper">
                      {%- if item.original_line_price != item.final_line_price -%}
                        <dl class="cart-item__discounted-prices">
                          <dt class="visually-hidden">
                            {{ 'products.product.price.sale_price' | t }}
                          </dt>
                          <dd class="price price--end">
                            {{ item.final_line_price | money }}
                          </dd>
                          <dt class="visually-hidden">
                            {{ 'products.product.price.regular_price' | t }}
                          </dt>
                          <dd>
                            <s class="cart-item__old-price price price--end cart-item__old-price">
                              {{ item.original_line_price | money }}
                            </s>
                          </dd>
                        </dl>
                      {%- else -%}
                        <span class="price price--end">
                          {% if item.product.compare_at_price != nil %}
                            {% assign original_price = item.product.compare_at_price | times: item.quantity %}
                              <span class="original_line_price">{{ item.original_line_price | money }}</span>
                              <span class="striked_price_cart"><s>{{ item.variant.compare_at_price | times: item.quantity | money }}</s> </span>
                          {% else %}
                            {{ item.original_line_price | money }}
                          {% endif %}

                        </span>
                      {%- endif -%}

                      {%- if item.variant.available and item.unit_price_measurement -%}
                        <div class="unit-price caption">
                          <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                          {{ item.variant.unit_price | money }}
                          <span aria-hidden="true">/</span>
                          <span class="visually-hidden">&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span>
                          {%- if item.variant.unit_price_measurement.reference_value != 1 -%}
                            {{- item.variant.unit_price_measurement.reference_value -}}
                          {%- endif -%}
                          {{ item.variant.unit_price_measurement.reference_unit }}
                        </div>
                      {%- endif -%}

                      {%- for discount in item.discounts -%}
                        {% if discount.amount > 0 and discount.title contains "4-digit" %}
                          <div class="discounts">
                            <span class="discounts__discount">
                              {{ discount.title }} {{ discount.amount | money }}
                            </span>
                          </div>
                        {% endif %}
                      {%- endfor -%}
                    </div>
                  </td>

                  <td class="cart-item__quantity">
                    <div class="cart-item__quantity-wrapper">
                      <label class="visually-hidden" for="Quantity-{{ item.index | plus: 1 }}">
                        {{ 'products.product.quantity.label' | t }}
                      </label>

                      {% if item.variant.metafields.cql.minimum_order_quantity == blank %}
                        {% assign quantity_increment = 1 %}
                      {% else %}
                        {% assign quantity_increment = item.variant.metafields.cql.minimum_order_quantity | plus: 0 %}
                      {% endif %}

                      {% assign max_input = item.variant.inventory_quantity | divided_by: quantity_increment | floor | times: quantity_increment %}
                      {% assign next_increment = item.quantity | plus: quantity_increment %}
                      {% assign prev_increment = item.quantity | minus: quantity_increment %}

                      <input type="hidden" name="id" value="{{ item.variant.id }}" class="select__select" />
                      {% if quantity_increment > 1 %}<div class="increment-informer">{{ 'products.product.quantity.increment_html' | t: increment: quantity_increment }}</div>{% endif %}
                      <quantity-input class="quantity">
                        <button class="quantity__button no-js-hidden{% if prev_increment < quantity_increment %} disabled{% endif %}" name="minus" type="button">
                          <span class="visually-hidden">{{ 'products.product.quantity.decrease' | t: product: item.product.title | escape }}</span>
                          {% render 'icon-minus' %}
                        </button>
                        <input class="quantity__input"
                          type="number"
                          name="updates[]"
                          value="{{ item.quantity }}"
                          min="{{quantity_increment}}"
                          max="{{max_input}}"
                          increment="{{quantity_increment}}"
                          aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                          id="Quantity-{{ item.index | plus: 1 }}"
                          data-index="{{ item.index | plus: 1 }}"
                        >
                        <button class="quantity__button no-js-hidden{% if next_increment > max_input %} disabled{% endif %}" name="plus" type="button">
                          <span class="visually-hidden">{{ 'products.product.quantity.increase' | t: product: item.product.title | escape }}</span>
                          {% render 'icon-plus' %}
                        </button>
                      </quantity-input>

                      <cart-remove-button id="Remove-{{ item.index | plus: 1 }}" data-index="{{ item.index | plus: 1 }}">
                        <a href="{{ item.url_to_remove }}" class="" aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}">
                          {% render 'icon-remove' %}
                          <span class="cart-remove_label">Delete</span>
                        </a>
                      </cart-remove-button>
                    </div>
                    <div class="cart-item__error" id="Line-item-error-{{ item.index | plus: 1 }}" role="alert">
                      <small class="cart-item__error-text"></small>
                      <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-error" viewBox="0 0 13 13">
                        <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
                        <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
                        <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
                        <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                      </svg>
                    </div>
                  </td>

                  <td class="cart-item__totals right small-hide">
                    <div class="loading-overlay hidden">
                      <div class="loading-overlay__spinner">
                        <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                          <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                        </svg>
                      </div>
                    </div>

                    <div class="cart-item__price-wrapper">
                      {%- if item.original_line_price != item.final_line_price -%}
                        <dl class="cart-item__discounted-prices">
                          <dt class="visually-hidden">
                            {{ 'products.product.price.sale_price' | t }}
                          </dt>
                          <dd class="price price--end">
                            {{ item.final_line_price | money }}
                          </dd>
                          <dt class="visually-hidden">
                            {{ 'products.product.price.regular_price' | t }}
                          </dt>
                          <dd>
                            <s class="cart-item__old-price price price--end">
                              {{ item.original_line_price | money }}
                            </s>
                          </dd>
                        </dl>
                      {%- else -%}
                        <span class="price price--end">
                          {% if item.product.compare_at_price != nil %}
                            {% assign original_price = item.product.compare_at_price | times: item.quantity %}
                              <span class="original_line_price">{{ item.original_line_price | money }}</span>
                              <span class="striked_price_cart"><s>{{ item.variant.compare_at_price | times: item.quantity | money }}</s> </span>
                          {% else %}
                            {{ item.original_line_price | money }}
                          {% endif %}
                        </span>
                      {%- endif -%}

                      {%- if item.variant.available and item.unit_price_measurement -%}
                        <div class="unit-price caption">
                          <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                          {{ item.variant.unit_price | money }}
                          <span aria-hidden="true">/</span>
                          <span class="visually-hidden">&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span>
                          {%- if item.variant.unit_price_measurement.reference_value != 1 -%}
                            {{- item.variant.unit_price_measurement.reference_value -}}
                          {%- endif -%}
                          {{ item.variant.unit_price_measurement.reference_unit }}
                        </div>
                      {%- endif -%}
                    </div>
                    {%- for discount in item.discounts -%}
                      {% if discount.amount > 0 and discount.title contains "4-digit" %}
                        <div class="discounts">
                          <span class="discounts__discount">
                            {{ discount.title }} {{ discount.amount | money }}
                          </span>
                        </div>
                      {% endif %}
                    {%- endfor -%}
                  </td>
                </tr>
              {%- endfor -%}
            </tbody>
          </table>
        {%- endif -%}
      </div>
    </div>

    <p class="visually-hidden" id="cart-live-region-text" aria-live="polite" role="status"></p>
    <p class="visually-hidden" id="shopping-cart-line-item-status" aria-live="polite" aria-hidden="true" role="status">{{ 'accessibility.loading' | t }}</p>
  </form>
</cart-items>

<script src="{{ 'jquery-3.6.0.min.js' | asset_url }}" async></script>

{% comment %}theme-check-disable{% endcomment %}
{{ 'calculate-shipping-threshold.js' | asset_url | script_tag }}
{% comment %}theme-check-enable{% endcomment %}

{% schema %}
{
  "name": "t:sections.main-cart-items.name",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "t:sections.main-cart-items.settings.show_vendor.label"
    },
    {
      "type": "textarea",
      "id": "cart_message",
      "label": "Cart message"
    },
    {
      "type": "url",
      "id": "cart_message_link",
      "label": "Cart message link"
    },
    {
      "type": "header",
        "content": "Shipping Message"
    },
    {
      "type": "checkbox",
      "id": "enable_shipping_message",
      "label": "Display shipping message"
    },
    {
      "type": "number",
      "id": "shipping_threshold",
      "label": "Shipping threshold"
    },
    {
      "type": "image_picker",
      "id": "shipping_icon",
      "label": "Icon"
    },
    {
      "type": "textarea",
      "id": "threshold_met",
      "label": "Threshold met message"
    },
    {
      "type": "textarea",
      "id": "threshold_not_met",
      "label": "Threshold NOT met message",
      "info": "Important! Use double colon :: to represent where the dynamic money amount will render."
    },
    {
      "type": "header",
      "content": "Gift Message"
    },
    {
      "type": "checkbox",
      "id": "enable_gift_message",
      "label": "Display gift message"
    },
    {
      "type": "image_picker",
      "id": "gift_icon",
      "label": "Icon"
    },
    {
      "type": "textarea",
      "id": "gift_message",
      "label": "Message"
    }
  ]
}
{% endschema %}
