      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Select a collection"
        },
        {
          "type": "header",
          "content": "Block options"
        },
        {
          "type": "select",
          "id": "image_hover",
          "options": [
            {
              "value": "easein",
              "label": "Ease in"
            },
            {
              "value": "noeffect",
              "label": "No effect"
            }
          ],
          "default": "noeffect",
          "label": "Image hover"
        },
        {
          "type": "select",
          "id": "animation",
          "options":[
            {
              "value": "fadeIn",
              "label": "Fade In"
            },
            {
              "value": "fadeInUp",
              "label": "Fade In Up"
            },
            {
              "value": "NoEffect",
              "label": "No Effect"
            }
          ],
