{{ 'section-info-accordion.css' | asset_url | stylesheet_tag }}

{% capture margin_size %}
  {% if section.settings.display_margins %}
    {{ settings.margin_size }}
  {% else %}
    0
  {% endif %}
{% endcapture %}

{% capture mobile_margin_size %}
  {% if section.settings.display_margins %}
    {{ settings.mobile_margin_size }}
  {% else %}
    0
  {% endif %}
{% endcapture %}

{% style %}
  #shopify-section-{{ section.id }} {
    margin-top: {{ margin_size | divided_by: 10 }}rem;
    margin-bottom: {{ margin_size | divided_by: 10 }}rem;
  }

  @media screen and (max-width: 750px) {
    #shopify-section-{{ section.id }} {
      margin-top: {{ mobile_margin_size | divided_by: 10 }}rem;
      margin-bottom: {{ mobile_margin_size | divided_by: 10 }}rem;
    }
  }
{% endstyle %}

<div class="info-accordion page-width page-width--narrow {% if settings.scroll_appear == "fadein" %} fadeIn {% endif %}">
  <h2 class="info-accordion__heading {{ section.settings.heading_size }}" style="color: {{ section.settings.heading_color }};">{{ section.settings.heading }}</h2>

  {%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'accordion_dropdown' -%}
        <div class="info-accordion__accordion accordion" id="accordion-block-{{ block.id }}" {{ block.shopify_attributes }}>
          <details>
            <summary>
              <div class="summary__title">
                <h2 class="h4 accordion__title">
                  {{ block.settings.heading | default: block.settings.page.title }}
                </h2>
              </div>
              <div class="status-indicator">
                {%- render 'icon-arrow-down' -%}
              </div>
            </summary>
            <div class="accordion__content rte">
              {{ block.settings.content }}
            </div>
          </details>
        </div>
    {%- endcase -%}
  {%- endfor -%}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Allows for only 1 accordion tab to be open at a time.
  const details = document.querySelectorAll("details");

  details.forEach((targetDetail) => {
    targetDetail.addEventListener("click", () => {
      details.forEach((detail) => {
        if (detail !== targetDetail) {
          detail.removeAttribute("open");
        }
      });
    });
  });
});
</script>

{% schema %}
{
  "name": "Accordion",
  "class": "spaced-section page-width section-info-accordion",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Headline",
      "default": "Accordion section"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Headline color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Headline size",
      "default": "h2",
      "options": [
        {
          "value": "h4",
          "label": "X-small"
        },
        {
          "value": "h3",
          "label": "Small"
        },
        {
          "value": "h2",
          "label": "Medium"
        },
        {
          "value": "h1",
          "label": "Large"
        }
      ]
    },
    {
      "type": "header",
      "content": "Margins",
      "info": "Apply global theme layout margins on the top and bottom"
    },
    {
      "type": "checkbox",
      "id": "display_margins",
      "label": "Display margins",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "accordion_dropdown",
      "name": "Accordion Tab",
      "limit": 12,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Dropdown title"
        },
        {
          "type": "color",
          "id": "heading_color",
          "label": "Dropdown title color",
          "default": "#000000"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Dropdown content"
        },
        {
          "type": "color",
          "id": "content_color",
          "label": "Dropdown content color",
          "default": "#000000"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Accordion"
    }
  ]
}
{% endschema %}
