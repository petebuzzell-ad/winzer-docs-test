    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "4:3 recommended."
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Mobile image",
      "info": "4:3 recommended."
    },
    {
      "type": "header",
      "content": "Content options"
    },
    {
      "type": "color",
      "id": "content_background_color",
      "label": "Content area background color",
      "default": "#000"
    },
    {
      "type": "checkbox",
      "id": "show_timeline",
      "default": false,
      "label": "Display Timeline line below section"
    },
    {
      "type": "header",
      "content": "Layout options - desktop"
    },
    {
      "type": "select",
      "id": "layout",
      "options": [
        {
          "value": "image_first",
          "label": "Image first"
        },
        {
          "value": "text_first",
          "label": "Text first"
        }
      ],
      "default": "image_first",
      "label": "Display option"
